{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}
<div class="row justify-content-md-center mt-5 mb-5">
    <form action"{{ path('security_user_login') }}" method="post" class="col-6 border border-info rounded p-3 text-center">
    <p class="h4">S'authentifier</p>
    <div class="form-group">
        <label for="inputMail">E-mail</label>
        <input type="email" class="form-control border-info" id="inputMail" name="_username" required>
    </div>
    <div class="form-group">
        <label for="inputPassword">Mot de passe</label>
        <input type="password" class="form-control border-info" id="inputPassword" name="_password" required>
    </div>
    <button type="submit" class="btn btn-info">Se connecter</button>
    <p class="mt-3 mb-0">Pas d'identifiant ?<a href="/register" />Inscrivez-vous</a></p>
    </form>
</div>
{% endblock %}