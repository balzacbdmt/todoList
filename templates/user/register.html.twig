{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}
<div class="row justify-content-md-center mt-5 mb-5">
    {{ form_start(form, {'attr': {'class': 'col-6 border border-info rounded p-3 text-center'}}) }}
    <p class="h4">S'inscrire</p>
    <div class="form-group">
        <label for="register_email">Email</label>
        {{ form_widget(form.email, {'attr': {'class': 'form-control border-info'}}) }}
    </div>
    <div class="form-group">
        <label for="register_username">Identifant</label>
        {{ form_widget(form.username, {'attr': {'class': 'form-control border-info'}}) }}
    </div>
    <div class="form-group">
        <label for="register_password">Mot de passe</label>
        {{ form_widget(form.password, {'attr': {'class': 'form-control border-info'}}) }}
    </div>
    <button type="submit" class="btn btn-info">S'inscrire</button>
    <p class="mt-3 mb-0">Vous avez d√©ja un compte ?<a href="/login" />Connectez-vous</a></p>
    {{ form_end(form)}}
</div>
{% endblock %}