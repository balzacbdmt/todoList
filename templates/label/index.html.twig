{% extends 'base.html.twig' %}

{% block title %}Label index{% endblock %}

{% block body %}
<style>
.newLabel {
    display: block;
    margin: auto;
    width: 12em;
}
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-info">
  <a class="navbar-brand" href="{{ path('home') }}">Todo list</a>
  <div class="collapse navbar-collapse">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="{{ path('home') }}">Accueil</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('getStarted') }}">Comment ça marche ?</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('aPropos') }}">A propos</a>
      </li>
      {% if app.user %}
      <li class="nav-item active">
        <a class="nav-link" href="{{ path('label_index') }}">Vos labels</a>
      </li>
      {% endif %}
    </ul>
    <ul class="navbar-nav">
      {% if not app.user %}
      <li class="nav-item">
        <a class="nav-link" href="{{ path('security_user_login') }}">Se connecter</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('security_user_register') }}">S'inscrire</a>
      </li>
      {% else %}
      <li class="nav-item">
        <a class="nav-link" href="{{ path('security_user_logout') }}">Se déconnecter</a>
      </li>
      {% endif %}
    </ul>
  </div>
</nav>

<div class="p-5">
    <h1 class="text-center">Vos Labels</h1>
    <table class="table">
        <thead class="bg-info">
            <tr>
                <th>Name</th>
                <th>Color</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for l in labels %}
            {% if l.users == app.user %}
            <tr>
                <td>{{ l.name }}</td>
                <td>{{ l.color }}</td>
                <td>
                    <a href="{{ path('label_edit', {'id': l.id}) }}"><btn class="fa fa-pencil" ></btn></a>
                </td>
                <td>
                    {{ include('label/_delete_form.html.twig') }}
                </td>
            </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="4">Vous n'avez aucun label</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<a href="{{ path('label_new') }}"><button type="button" class="btn btn-info newLabel">Nouveau label</button></a>
{% endblock %}
