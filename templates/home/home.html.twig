{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}
<style>

.bottom-card {
    position: absolute;
    bottom: 1em;
}

.divTodoBtn {
  height: 0;
}

.todoBtn {
    position: absolute;
    right: 5px;
    font-size: 2em;
    margin: 0 5px;
}

.btnEdit {
  top: 0;
  right: 1.5em;
}

.btnRm {
  top: 0;
}

.btnRm:hover, .btnEdit:hover {
    font-size: 2.1em;
    cursor: pointer;
}

.addIcon {
    font-size: 7em;
    display: block;
    margin: auto;
}

.addIcon:hover {
    font-size: 7.3em;
    cursor: pointer;
}
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-info">
  <a class="navbar-brand" href="{{ path('home') }}">Todo list</a>
  <div class="collapse navbar-collapse">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="{{ path('home') }}">Accueil</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('getStarted') }}">Comment ça marche ?</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('aPropos') }}">A propos</a>
      </li>
      {% if app.user %}
      <li class="nav-item">
        <a class="nav-link" href="{{ path('label_index') }}">Vos labels</a>
      </li>
      {% endif %}
    </ul>
    <ul class="navbar-nav">
      {% if not app.user %}
      <li class="nav-item">
        <a class="nav-link" href="{{ path('security_user_login') }}">Se connecter</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('security_user_register') }}">S'inscrire</a>
      </li>
      {% else %}
      <li class="nav-item">
        <a class="nav-link" href="{{ path('security_user_logout') }}">Se déconnecter</a>
      </li>
      {% endif %}
    </ul>
  </div>
</nav>

<div class="mt-3 d-flex flex-wrap justify-content-center">
  {% if not app.user %}
    <div class="card border border-info m-2" style="width: 20rem; min-height: 15rem;">
      <div class="card-body">
        <div class="divTodoBtn">
          <span class="text-info text-right todoBtn">
            <i class="fa fa-pencil"></i>
          </span>
          <span class="text-info text-right todoBtn">
            <i class="fa fa-trash"></i>
          </span>
        </div>
        <div class="d-flex flex-wrap">
          <div class="label rounded" style="border: 5px solid pink; width: 4em;"></div>
        </div>
        <h5 class="card-title">Nom de la tâche</h5>
        <p class="card-text mb-1">Une description a votre tâche. Cette dernière peut contenir jusqu'a 255 caractères !</p>
        <div class="bottom-card">
          <p class="font-weight-lighter m-0">Créer le 01/01/1970</p>
          <p class="font-weight-lighter m-0">A terminer pour le 01/01/1970</p>
        </div>
      </div>
    </div>
  {% else %}
    {% for t in todos %}
      {% if t.users == app.user and not t.done %}
      <div class="card border border-info m-2" style="width: 20rem; min-height: 15rem;">
        <div class="card-body">
          <div class="divTodoBtn">
            <span class="text-info text-right todoBtn btnEdit" onclick="window.location='/todo/edit/{{ t.id }}';">
              <i class="fa fa-pencil"></i>
            </span>
            <form method="post" action="{{ path('todo_delete', {'id': t.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
              <input type="hidden" name="_method" value="DELETE">
              <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ t.id) }}">
              <button class="btn">
                <span class="text-info text-right todoBtn btnRm">
                  <i class="fa fa-trash"></i>
                </span>
              </button>
            </form>
          </div>
          <div class="d-flex flex-wrap">
            <div class="label rounded" style="border: 5px solid pink; width: 4em;"></div>
          </div>
          <h5 class="card-title">{{ t.name }}</h5>
          <p class="card-text mb-1">{{ t.description }}</p>
          <div class="bottom-card">
            <p class="font-weight-lighter m-0">Créer le {{ t.startDate|date('d/m/Y') }}</p>
            <p class="font-weight-lighter m-0">A terminer pour le {{ t.deadline|date('d/m/Y') }}</p>
          </div>
        </div>
      </div>
      {{ dump(t) }}
      {% endif %}
    {% endfor %}
    <div class="card border border-info m-2" style="width: 20rem;">
        <div class="card-body" onclick="window.location='{{ path('todo_new') }}';">
          <span class="text-info text-center addIcon">
            <i class="fa fa-plus-circle"></i>
          </span>
          <h5 class="card-title text-center">Nouvelle tâche</h5>
        </div>
    </div>
  {% endif %}
</div>
{% endblock %}
